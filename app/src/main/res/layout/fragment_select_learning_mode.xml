<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ui.learn.selectLearningMode.SelectLearningModeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/selectLearningModeMaterial"
        style="@style/CardViewOption"
        android:layout_width="150dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/learning_mode_material"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/selectLearningModeQuiz"
        style="@style/CardViewOption"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectLearningModeMaterial"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/learning_mode_quiz"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>